                    <circle cx="399" cy="274" r="48" style="fill:rgb(111,32,142);"/>
                </g>
                <path d="M407.119,286.293L407.119,277.073L392.881,277.073L392.881,286.293L385.762,286.293L385.762,261.707L414.238,261.707L414.238,286.293L407.119,286.293ZM407.119,270.927L407.119,267.854L392.881,267.854L392.881,270.927L407.119,270.927Z" style="fill:white;fill-rule:nonzero;"/>
            </g>
        </svg>
            <svg id="electron" width="256" height="256" viewBox="0 0 255 256">
                <circle r=8 fill=#8DFF00>
                    <animateMotion dur="6.5s" repeatCount="indefinite" path="M 64, 128 a 64,64 0 1,1 128,0 a 64,64 0 1,1 -128,0"/>
                </circle>
                <circle r=8 fill=#00C5FF>
