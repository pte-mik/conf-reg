{% extends('@smartpage/smartpage.twig') %}

{% block head %}
    {{ parent() }}
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background-color: #0e2015;
        }
        div.wrapper {
            display: flex;
            flex-direction: column;
            height: 100%;
            justify-content: center;
            margin: 0 auto;
            width: 256px;
        }
        div.logo {
            width: 256px;
            height: 256px;
            position: relative;
        }
        svg {
            position: absolute;
        }
        svg#logo {
            top: 96px;
            left: 96px
        }
    </style>
{% endblock %}


{% block content %}
    <div class="wrapper">
        <div class="logo">
            <svg id="logo" width="64" height="64" viewBox="0 0 64 64" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" xmlns:serif="http://www.serif.com/" style="fill-rule:evenodd;clip-rule:evenodd;stroke-linejoin:round;stroke-miterlimit:2;">
            <g transform="matrix(1,0,0,1,-367,-242)">
